<%- include('partials/header') %>

<div class="container">
    <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 2rem;">
        <h1><%= category %> Resources</h1>
        <a href="/dashboard" class="btn btn-outline">Back to Dashboard</a>
    </div>

    <link rel="stylesheet" href="/css/video-style.css">
    
    <% 
        function getYouTubeId(url) {
            try {
                const urlStr = url.startsWith('http') ? url : 'https://' + url;
                const urlObj = new URL(urlStr);
                if (urlObj.hostname.includes('youtu.be')) return urlObj.pathname.slice(1);
                if (urlObj.pathname.includes('/embed/')) return urlObj.pathname.split('/embed/')[1].split('?')[0];
                const v = urlObj.searchParams.get('v');
                if (v) return v;
                
                // Regex fallback for other formats
                const regExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
                const match = url.match(regExp);
                return (match && match[2].length === 11) ? match[2] : null;
            } catch(e) { return null; }
        }

        function getYouTubePlaylistId(url) {
            try {
                const urlStr = url.startsWith('http') ? url : 'https://' + url;
                const urlObj = new URL(urlStr);
                return urlObj.searchParams.get('list');
            } catch(e) { return null; }
        }
    %>

    <% if (resources.length === 0) { %>
        <div style="text-align: center; padding: 4rem; color: var(--text-muted);">
            <ion-icon name="folder-open-outline" style="font-size: 3rem; margin-bottom: 1rem;"></ion-icon>
            <p>No resources found for this category yet.</p>
        </div>
    <% } else { %>
        <div class="video-grid">
            <% resources.forEach(resource => { %>
                <% 
                    const ytId = resource.type === 'video' ? getYouTubeId(resource.url) : null; 
                    const ytPlaylistId = (resource.type === 'video' || resource.type === 'link') ? getYouTubePlaylistId(resource.url) : null;
                %>
                
                <% if (ytPlaylistId) { %>
                     <!-- Playlist Card -->
                     <div class="video-card">
                        <div class="video-wrapper">
                            <iframe 
                                src="https://www.youtube.com/embed/videoseries?list=<%= ytPlaylistId %>" 
                                title="<%= resource.title %>" 
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                                allowfullscreen>
                            </iframe>
                        </div>
                        <div class="video-content">
                            <h3 class="video-title" title="<%= resource.title %>"><%= resource.title %></h3>
                            <p class="video-desc"><%= resource.description %></p>
                            <span class="status-badge" style="background: rgba(139, 92, 246, 0.15); color: #8b5cf6; border: 1px solid rgba(139, 92, 246, 0.2); display: inline-flex; align-items: center; gap: 4px; padding: 4px 10px; margin-top: 0.5rem; text-transform: uppercase; font-size: 0.75rem; font-weight: 600;">
                                <ion-icon name="list-outline" style="font-size: 1rem;"></ion-icon> Playlist
                            </span>
                        </div>
                    </div>
                <% } else if (resource.type === 'video' && ytId) { %>
                    <!-- Video Card -->
                    <div class="video-card">
                        <div class="video-wrapper">
                            <iframe 
                                src="https://www.youtube.com/embed/<%= ytId %>" 
                                title="<%= resource.title %>" 
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                                allowfullscreen>
                            </iframe>
                        </div>
                        <div class="video-content">
                            <h3 class="video-title" title="<%= resource.title %>"><%= resource.title %></h3>
                            <p class="video-desc"><%= resource.description %></p>
                            <span class="status-badge" style="background: rgba(59, 130, 246, 0.15); color: #3b82f6; border: 1px solid rgba(59, 130, 246, 0.2); display: inline-flex; align-items: center; gap: 4px; padding: 4px 10px; margin-top: 0.5rem; text-transform: uppercase; font-size: 0.75rem; font-weight: 600;">
                                <ion-icon name="play-circle-outline" style="font-size: 1rem;"></ion-icon> Video
                            </span>
                        </div>
                    </div>
                <% } else { %>
                    <!-- Standard Resource Card -->
                    <div class="card" style="justify-content: space-between;">
                        <div>
                            <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 0.5rem;">
                                <div class="card-icon" style="font-size: 1.5rem; margin-bottom: 0;">
                                    <% if (resource.type === 'pdf') { %> 
                                        <ion-icon name="document-text" style="color: #ef4444;"></ion-icon>
                                    <% } else if (resource.type === 'article') { %> 
                                        <ion-icon name="newspaper" style="color: #10b981;"></ion-icon>
                                    <% } else { %> 
                                        <ion-icon name="link" style="color: #6366f1;"></ion-icon> 
                                    <% } %>
                                </div>
                                
                                <% if (resource.type === 'pdf') { %>
                                    <span class="status-badge" style="background: rgba(239, 68, 68, 0.15); color: #ef4444; border: 1px solid rgba(239, 68, 68, 0.2); display: inline-flex; align-items: center; gap: 4px; padding: 4px 10px; text-transform: uppercase; font-size: 0.75rem; font-weight: 600;">
                                        PDF
                                    </span>
                                <% } else if (resource.type === 'article') { %>
                                    <span class="status-badge" style="background: rgba(16, 185, 129, 0.15); color: #10b981; border: 1px solid rgba(16, 185, 129, 0.2); display: inline-flex; align-items: center; gap: 4px; padding: 4px 10px; text-transform: uppercase; font-size: 0.75rem; font-weight: 600;">
                                        Article
                                    </span>
                                <% } else { %>
                                    <span class="status-badge" style="background: rgba(99, 102, 241, 0.15); color: #6366f1; border: 1px solid rgba(99, 102, 241, 0.2); padding: 4px 10px; text-transform: uppercase; font-size: 0.75rem; font-weight: 600;">
                                        <%= resource.type %>
                                    </span>
                                <% } %>
                            </div>
                            <h3 class="card-title" style="font-size: 1.1rem;"><%= resource.title %></h3>
                            <p class="card-desc" style="font-size: 0.9rem;"><%= resource.description %></p>
                        </div>
                        <% if (resource.type === 'pdf') { %>
                            <a href="/view-pdf/<%= resource._id %>" target="_blank" class="btn btn-primary" style="width: 100%; text-align: center; margin-top: 1rem;">
                                View PDF
                            </a>
                        <% } else { %>
                            <a href="<%= resource.url %>" target="_blank" class="btn btn-primary" style="width: 100%; text-align: center; margin-top: 1rem;">
                                Open Resource
                            </a>
                        <% } %>
                    </div>
                <% } %>
            <% }) %>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>
