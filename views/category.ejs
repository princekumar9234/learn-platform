<%- include('partials/header') %>

<div class="container">
    <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 2rem;">
        <h1><%= category %> Resources</h1>
        <a href="/dashboard" class="btn btn-outline">Back to Dashboard</a>
    </div>

    <link rel="stylesheet" href="/css/video-style.css">
    
    <% 
        function getYouTubeId(url) {
            const regExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
            const match = url.match(regExp);
            return (match && match[2].length === 11) ? match[2] : null;
        }

        function getYouTubePlaylistId(url) {
            const regExp = /[?&]list=([^#&?]+)/;
            const match = url.match(regExp);
            return match ? match[1] : null;
        }
    %>

    <% if (resources.length === 0) { %>
        <div style="text-align: center; padding: 4rem; color: var(--text-muted);">
            <ion-icon name="folder-open-outline" style="font-size: 3rem; margin-bottom: 1rem;"></ion-icon>
            <p>No resources found for this category yet.</p>
        </div>
    <% } else { %>
        <div class="video-grid">
            <% resources.forEach(resource => { %>
                <% 
                    const ytId = resource.type === 'video' ? getYouTubeId(resource.url) : null; 
                    const ytPlaylistId = (resource.type === 'video' || resource.type === 'link') ? getYouTubePlaylistId(resource.url) : null;
                %>
                
                <% if (ytPlaylistId) { %>
                     <!-- Playlist Card -->
                     <div class="video-card">
                        <div class="video-wrapper">
                            <iframe 
                                src="https://www.youtube.com/embed/videoseries?list=<%= ytPlaylistId %>" 
                                title="<%= resource.title %>" 
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                                allowfullscreen>
                            </iframe>
                        </div>
                        <div class="video-content">
                            <h3 class="video-title" title="<%= resource.title %>"><%= resource.title %></h3>
                            <p class="video-desc"><%= resource.description %></p>
                            <span class="resource-type" style="margin-top: 0.5rem; display: inline-block;">Playlist</span>
                        </div>
                    </div>
                <% } else if (resource.type === 'video' && ytId) { %>
                    <!-- Video Card -->
                    <div class="video-card">
                        <div class="video-wrapper">
                            <iframe 
                                src="https://www.youtube.com/embed/<%= ytId %>" 
                                title="<%= resource.title %>" 
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                                allowfullscreen>
                            </iframe>
                        </div>
                        <div class="video-content">
                            <h3 class="video-title" title="<%= resource.title %>"><%= resource.title %></h3>
                            <p class="video-desc"><%= resource.description %></p>
                            <span class="resource-type" style="margin-top: 0.5rem; display: inline-block;">Video</span>
                        </div>
                    </div>
                <% } else { %>
                    <!-- Standard Resource Card -->
                    <div class="card" style="justify-content: space-between;">
                        <div>
                            <div style="display: flex; justify-content: space-between; align-items: start;">
                                <div class="card-icon" style="font-size: 1.5rem; margin-bottom: 0.5rem;">
                                    <% if (resource.type === 'pdf') { %> <ion-icon name="document-text"></ion-icon>
                                    <% } else if (resource.type === 'article') { %> <ion-icon name="newspaper"></ion-icon>
                                    <% } else { %> <ion-icon name="link"></ion-icon> <% } %>
                                </div>
                                <span class="resource-type"><%= resource.type %></span>
                            </div>
                            <h3 class="card-title" style="font-size: 1.1rem;"><%= resource.title %></h3>
                            <p class="card-desc" style="font-size: 0.9rem;"><%= resource.description %></p>
                        </div>
                        <a href="<%= resource.url %>" target="_blank" class="btn btn-primary" style="width: 100%; text-align: center; margin-top: 1rem;">
                            Open Resource
                        </a>
                    </div>
                <% } %>
            <% }) %>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>
