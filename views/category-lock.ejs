<%- include('partials/header') %>

<div class="container" style="min-height: 70vh; display: flex; align-items: center; justify-content: center;">
    <div class="card" style="max-width: 450px; width: 100%; text-align: center; padding: 3rem 2rem;">
        <div class="card-icon" style="color: var(--danger); font-size: 4rem; margin-bottom: 1.5rem;">
            <ion-icon name="lock-closed"></ion-icon>
        </div>
        
        <h2 style="margin-bottom: 0.5rem; font-size: 1.8rem;">Protected Category</h2>
        <p style="color: var(--text-muted); margin-bottom: 2rem;">
            The content in <strong><%= category %></strong> is password protected. Please enter the access password to continue.
        </p>

        <% if (error) { %>
            <div style="background: rgba(239, 68, 68, 0.1); color: #ef4444; padding: 0.8rem; border-radius: 8px; margin-bottom: 1.5rem; font-size: 0.9rem; border: 1px solid rgba(239, 68, 68, 0.2);">
                <%= error %>
            </div>
        <% } %>

        <form action="/category/<%= category %>/unlock" method="POST">
            <div style="margin-bottom: 1.5rem; text-align: left;">
                <label for="password" style="display: block; margin-bottom: 0.5rem; color: var(--text-muted); font-size: 0.9rem;">Category Password</label>
                <input type="password" name="password" id="password" required placeholder="Enter password here..." 
                       style="width: 100%; padding: 1rem; border-radius: 12px; border: 1px solid rgba(255, 255, 255, 0.1); background: rgba(255, 255, 255, 0.05); color: white; font-size: 1rem;">
            </div>
            
            <div style="display: flex; flex-direction: column; gap: 1rem;">
                <button type="submit" class="btn btn-primary" style="padding: 1rem; font-size: 1rem; width: 100%;">Unlock Content</button>
                <a href="/dashboard" style="color: var(--text-muted); text-decoration: none; font-size: 0.9rem;">&larr; Back to Dashboard</a>
            </div>
        </form>
    </div>
</div>

<%- include('partials/footer') %>
